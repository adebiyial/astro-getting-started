---
export interface Props {
	id: string;
}

const { id } = Astro.props as Props;
---

<button {...{id}} class="card-button">
	<slot name="end">
		<p>No slot with `name="end"`</p>
	</slot>
	<slot />
</button>

<style>
	.card-button {
		background-color: #fff;
		border: 1px solid #ccc;
		border-radius: 3px;
		box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
		color: #222;
		cursor: pointer;
		display: inline-block;
		font-size: 14px;
		font-weight: bold;
		line-height: 1.42857;
		margin: 10px 0 0;
		padding: 6px 12px;
		text-align: center;
		text-decoration: none;
		white-space: nowrap;
	}
</style>
